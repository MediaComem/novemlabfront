extends layout

append scripts
  script(src='/javascripts/controllers/accueil.js')

block content
  .main#intro(ng-controller="IntroControler as iCtrl")
    .left
      .credentials
        p
          a(href="http://www.heig-vd.ch", target="blank")
            img(src="/images/heig-etiqu.png", class="heig", style="height:80px")
          a(href="http://media.heig-vd.ch", target="blank")
            img(src="/images/im.png",classe="im")
    .right
    .button
      .loader-ring
        .loader-ring-light
        .loader-ring-track
    .intro
      img(src="/images/novemlab_final_transparent.png" ,class="header")
      h1 Bienvenue
      p
      input(type='text', placeholder='Entrez votre prénom', ng-model='iCtrl.joueur.pseudo')
      button.startButton(ng-click='iCtrl.start()') Commencer les épreuves
      span {{iCtrl.error}}
      div.novemVoice.animated.slideInUp
        p#novemText
        button.closeNovemVoice
          span.glyphicon.glyphicon-chevron-down(aria-hidden='true')
        section.stage
          figure.ball
